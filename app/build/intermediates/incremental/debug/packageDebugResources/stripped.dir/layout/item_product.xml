<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="14dp">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="26dp" >

        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:background="#9FE2BF"
            android:padding="8dp"
            android:orientation="vertical" >

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="25dp"
                android:layout_gravity="center_horizontal">

                <ImageView
                    android:id="@+id/image_card"
                    android:layout_width="120dp"
                    android:layout_height="100dp"
                    android:src="@drawable/navy_blue_hoodie"
                    android:layout_gravity="center_horizontal"/>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="10dp">

                <TextView
                    android:id="@+id/model_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="model_id"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/name_product_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:fontFamily="@font/chelsea_market"
                    android:text="Blue hoodie"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/price_card"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="38dp"
                        android:layout_marginRight="10dp"
                        android:fontFamily="@font/chelsea_market"
                        android:text="60"
                        android:textColor="@color/black"
                        android:textSize="26sp" />

                    <TextView
                        android:id="@+id/icon_dollars"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/chelsea_market"
                        android:text="$"
                        android:textColor="@color/black"
                        android:textSize="26sp" />

                </LinearLayout>
                <TextView
                    android:id="@+id/description_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="text"
                    android:textSize="20sp"
                    android:layout_marginRight="2dp"
                    android:layout_marginLeft="9dp"
                    android:visibility="gone"
                    android:textAlignment="center"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/ability_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/chelsea_market"
                    android:text="is available/out of store"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/btn_zoom"
                    android:layout_width="50dp"
                    android:layout_height="38dp"
                    android:layout_gravity="right"
                    android:layout_marginEnd="18dp"
                    android:background="#E6E6E5"
                    android:contentDescription="more"
                    android:src="@drawable/baseline_expand_more_24" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/tovar_favorite_check"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/baseline_check_circle_outline_24"
            android:visibility="invisible"
            android:layout_gravity="center" />

    </androidx.cardview.widget.CardView>

</LinearLayout>